---
import Head from '../components/app/Head.astro';
import Header from '../components/app/Header.astro';
import Footer from '../components/app/Footer.astro';

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head title={title} />
	<body>
		<div class="wrapper">
			<Header />

			<main class="main">
				<slot />
			</main>

			<Footer />
		</div>
		<style lang="scss">
			body {
				width: 100%;
				font-family: $mainfont;
				font-weight: $regular;
				font-size: 18px;
				line-height: 1;
				color: $txtcolor;
				&._lock {
					overflow: hidden;
				}
			}
			.wrapper {
				min-width: 100%;
				display: flex;
				flex-direction: column;
				overflow: hidden;
			}
			.main {
				flex: 1 1 auto;
			}
		</style>
	</body>
</html>
