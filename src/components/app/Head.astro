---
interface Props {
	title?: string;
}

const { title = 'Roby' } = Astro.props;

const resolveURL = (path: string) =>
	`${import.meta.env.BASE_URL.replace(/\/$/g, '')}/${path.replace(/^\//g, '')}`;
---

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/png" sizes="16x16" href={resolveURL('/favicon-16x16.png')} />
	<link rel="icon" type="image/png" sizes="32x32" href={resolveURL('/favicon-32x32.png')} />
	<link rel="apple-touch-icon" sizes="180x180" href={resolveURL('/apple-touch-icon.png')} />
	<link
		rel="icon"
		type="image/png"
		sizes="192x192"
		href={resolveURL('/android-chrome-192x192.png')}
	/>
	<link
		rel="icon"
		type="image/png"
		sizes="384x384"
		href={resolveURL('/android-chrome-384x384.png')}
	/>
	<link rel="mask-icon" href={resolveURL('/safari-pinned-tab.svg')} color="#5bbad5" />
	<meta name="msapplication-TileColor" content="#da532c" />
	<meta name="theme-color" content="#ffffff" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
