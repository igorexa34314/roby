---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import logoImage from '../../assets/logo.png';

const socialsLogos = import.meta.glob<{ default: ImageMetadata }>(
	'/src/assets/socials/*.{jpeg,jpg,png,gif}'
);

const footerLinks = [
	{ title: 'Home', href: '#' },
	{ title: 'About', href: '#' },
	{ title: 'News', href: '#' },
	{ title: 'Pricing', href: '#' },
	{ title: 'Style Guide', href: '#' },
	{ title: 'Image Licensing', href: '#' },
];

const socials = [
	{ name: 'facebook', logo: '/src/assets/socials/facebook.png', href: '#' },
	{ name: 'instagram', logo: '/src/assets/socials/instagram.png', href: '#' },
	{ name: 'twitter', logo: '/src/assets/socials/twitter.png', href: '#' },
	{ name: 'linkedin', logo: '/src/assets/socials/linkedin.png', href: '#' },
	{ name: 'basketball', logo: '/src/assets/socials/basketball.png', href: '#' },
];
---

<footer class="footer">
	<div class="footer__container">
		<div class="footer__main">
			<div class="footer__body">
				<div class="footer__logo logo">
					<Image src={logoImage} alt="Logo" />
				</div>
				<div class="footer__columns">
					<div class="footer__column">
						<div class="footer__block-text block-text address">
							<h3 class="footer__title">Address</h3>
							<div class="block-text__text">
								<p>14 New South Head Rd,</p>
								<p>Triple Bay 3148</p>
								<p>London, UK</p>
							</div>
						</div>
						<div class="footer__button"><a href="" class="button">Find on Map</a></div>
					</div>
					<div class="footer__column">
						<h3 class="footer__title">Sitemap</h3>
						<div class="footer__nav nav-footer">
							<ul class="nav-footer__list">
								{
									footerLinks.map(link => (
										<li class="nav-footer__item">
											<a href={link.href} class="nav-footer__link">
												{link.title}
											</a>
										</li>
									))
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="contact">
				<div class="contact__wrapper">
					<div class="socials">
						{
							socials.map(social => (
								<div class="socials__item">
									<a href={social.href} class:list={['socials__link', social.name]}>
										<Image
											src={socialsLogos[social.logo]()}
											alt={social.name.charAt(0).toUpperCase() + social.name.slice(1)}
										/>
									</a>
								</div>
							))
						}
					</div>
					<div class="contact__block-text">
						<h3 class="footer__title">Contact</h3>
						<div class="block-text__text">
							<p>P: 3740 213 301</p>
							<p>E: contact@robi.com</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="copyrights">
			<div class="copyrights__text">
				Â© This is a Deni Bozo template powered by <a>Webflow</a>
			</div>
		</div>
	</div>
</footer>

<style lang="scss">
	.footer {
		background-color: $bgccolor;
		&__container {
			@include adaptiv-value('padding-top', 50, 20, 2);
		}
		&__main {
			@media (max-width: ($fullContainerWidth+px)) {
				padding-bottom: 15px;
			}
			display: flex;
			@media (max-width: $bp760) {
				flex-direction: column;
			}
		}
		&__block-text {
			> div {
				@media (max-width: $bp760) {
					p {
						display: inline-block;
					}
				}
			}
		}
		&__body {
			flex: 1 1 auto;
		}
		&__logo {
			@include adaptiv-value('padding-top', 23.5, 8, 2);
			@include adaptiv-value('padding-bottom', 6, 2, 2);
			@include adaptiv-value('margin-bottom', 30, 0, 2);
		}
		&__columns {
			padding-top: 23px;
			display: flex;
			@media (max-width: $bp760) {
				padding-left: 15px;
				padding-right: 15px;
				justify-content: space-between;
			}
		}
		&__column {
			flex: 0 0 50%;
			@media (max-width: $bp760) {
				flex: 0 0 40%;
			}
		}
		&__title {
			font-weight: $bold;
			@include adaptiv-value('font-size', 20, 16, 2);
			line-height: 1.5;

			text-transform: uppercase;
			&:not(:last-child) {
				@include adaptiv-value('margin-bottom', 21, 12, 2);
			}
		}
		&__button {
			@include adaptiv-value('margin-top', 40, 20, 2);
			display: flex;
		}
		&__nav {
		}
	}
	.address {
		p {
			&:not(:last-child) {
				margin-bottom: 2px;
			}
		}
	}
	.nav-footer {
		&__list {
		}
		&__item {
			&:not(:last-child) {
				margin-bottom: 5px;
			}
		}
		&__link {
			color: #000000;
			@include adaptiv-value('font-size', 18, 15, 2);
			line-height: 1.28;
			transition: all 0.3s ease 0s;
			&:hover {
				text-decoration: underline;
			}
		}
	}
	.contact {
		padding-top: 32px;
		&__wrapper {
		}
		&__block-text {
			padding: 0px 10px 0px 38px;
			@media (max-width: $bp760) {
				text-align: center;
			}
			p:not(:last-child) {
				margin-bottom: 5px;
			}
		}
	}
	.socials {
		@include adaptiv-value('margin-bottom', 45, 15, 2);
		display: flex;
		align-items: center;
		@media (max-width: $bp760) {
			margin-top: 10px;
			justify-content: center;
		}
		&__item {
			padding: 15px;
		}

		&__link {
		}
	}
	.copyrights {
		@include adaptiv-value('padding-top', 36, 13, 2);
		@include adaptiv-value('padding-bottom', 20, 10, 2);
		@media (max-width: $bp760) {
			border-top: 0.1px solid #000000;
		}
		&__text {
			@include adaptiv-value('font-size', 17, 14, 2);
			@media (max-width: $bp760) {
				text-align: center;
			}
			line-height: 1.3;
			color: #747474;
			> a {
				margin-left: 12px;
			}
		}
	}
