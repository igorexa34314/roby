---
import { Image } from 'astro:assets';
import heroImg from '../../assets/hero/hero.png';
---

<section class="hero">
	<div class="hero__container">
		<div class="hero__image">
			<Image src={heroImg} alt="Hero Image" />
		</div>
		<div class="hero__content">
			<h1 class="hero__title">
				“We believe that <span>the power of design</span> helps businesses.”
			</h1>
			<div class="hero__notice">
				<div class="notice"><span>work with us</span></div>
			</div>
		</div>
	</div>
</section>

<style lang="scss">
	.hero {
		background-color: $bgccolor;
		&__container {
			position: relative;
			padding-top: 205px;
			@include adaptiv-value('padding-bottom', 120, 75, 2);
			display: flex;
			max-width: (1440 + $cntpd * 2) + px;
			@media (max-width: ((1440 + $cntpd*2)+px)) {
				max-width: $bp1280;
			}
			@media (max-width: $bp1280) {
				max-width: $bp1024;
			}
			@media (max-width: $bp1024) {
				max-width: $bp980;
			}
			@media (max-width: $bp980) {
				max-width: $bp760;
				flex-direction: column-reverse;
				@include adaptiv-value('row-gap', 40, 25, 2);
			}
			@media (max-width: $bp760) {
				max-width: $bp640;
			}
			@media (max-width: $bp640) {
				max-width: none;
			}
		}
		&__image {
			flex: 0 0 50%;
			img {
				height: auto;
				max-width: 100%;
			}
		}

		&__content {
			position: relative;
			flex: 0 0 50%;
			padding: 102px 79px 32px 59px;

			@media (max-width: ((1440 + $cntpd*2)+px)) {
				padding: 102px 30px 32px 50px;
			}
			@media (max-width: $bp1280) {
				padding: 45px 0px 20px 10px;
			}
			@media (max-width: $bp1024) {
				padding: 45px 0px 20px 10px;
			}
			@media (max-width: $bp640) {
				padding-top: 20px;
			}
			@media (max-width: $bp450) {
				padding-top: 10px;
			}
		}

		&__title {
			font-weight: $bold;
			@include adaptiv-value('font-size', 60, 16, 2);
			@media (max-width: $bp1024) {
				@include adaptiv-value('font-size', 60, 28, 2);
			}
			line-height: 1;
			text-transform: uppercase;
			span {
				display: block;
				font-weight: $regular;
				@include adaptiv-value('font-size', 49, 12, 2);
				@media (max-width: $bp1024) {
					@include adaptiv-value('font-size', 49, 22, 2);
				}
				line-height: 1.22;
				letter-spacing: 0.02em;
			}
		}

		&__notice {
			position: absolute;
			bottom: 0;
			transform: translate(0, -20%);
			@media (max-width: $bp980) {
				top: 50%;
				transform: translate(0, -50%);
				right: 10%;
			}
			@media (max-width: $bp640) {
				right: 3%;
			}
			@media (max-width: $bp450) {
				display: none;
			}
		}
	}
</style>
