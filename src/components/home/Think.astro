---
import ThinkSlider from '../think/ThinkSlider.astro';
import { getCollection } from 'astro:content';

const quotes = await getCollection('quotes');
---

<section class="think">
	<div class="think__container">
		<h2 class="think__title">What <span>they</span> think</h2>
		<ThinkSlider quotes={quotes} />
	</div>
</section>

<style lang="scss">
	.think {
		background-color: $bgccolor;
		&__container {
			max-width: 1440px;
			@include adaptiv-value('padding-bottom', 85, 45, 2);
			@media (max-width: 1440px) {
				max-width: $bp1280;
			}
			@media (max-width: $bp1280) {
				max-width: $bp1024;
			}
			@media (max-width: $bp1024) {
				max-width: $bp980;
			}
			@media (max-width: $bp980) {
				max-width: $bp760;
				flex-direction: column;
			}
			@media (max-width: $bp760) {
				max-width: $bp640;
			}
			@media (max-width: $bp640) {
				padding-top: 2em;
				max-width: none;
			}
		}

		&__title {
			@include adaptiv-value('margin-bottom', 88, 25, 2);
			font-weight: $bold;
			@include adaptiv-value('font-size', 60, 32, 2);
			line-height: 1.2;
			text-align: center;
			text-transform: uppercase;
			span {
				font-weight: $regular;
				font-size: 0.7em;
				line-height: 1.71;
				letter-spacing: 0.025em;
			}
		}
	}
</style>
